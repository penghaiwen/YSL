<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.example.demo.sys.mapper.SysUserMapper">
    <select id="getUserByUsername" resultType="com.example.demo.sys.entity.SysUser">
        select * from sys_user where name=#{userName} limit 1
    </select>
    <select id="getUserPageVo" resultType="com.example.demo.sys.vo.UserPageVo">
        select * from sys_user u
        <where>
            and u.delete_flag = 0
            <if test="userName !=null and userName != ''">
                and u.name like CONCAT('%',#{userName},'%')
            </if>
        </where>
    </select>
</mapper>
